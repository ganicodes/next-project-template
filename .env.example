# Example environment variables for this project
# Copy this to `.env.local` and replace the placeholders with real values.

# NextAuth settings
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=replace_with_a_random_secret

# OAuth providers
# Google OAuth credentials (used by the Google provider)
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# Database (used by Prisma)
# For local dev with SQLite: file:./dev.db
# For Postgres: postgres://USER:PASSWORD@HOST:PORT/DATABASE
DATABASE_URL="file:./dev.db"

# Node environment
NODE_ENV=development
